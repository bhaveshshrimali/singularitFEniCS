Bootstrap: docker
From: ubuntu:18.04

%post
    apt-get -y update
    apt-get -y install software-properties-common ffmpeg curl build-essential python3 python3-pip python3-tk
    apt-get -y update
    pip3 install numpy scipy matplotlib pandas ffmpeg-python
    add-apt-repository universe
    add-apt-repository ppa:ngsolve/ngsolve
    apt-get -y update
    apt-get install ngsolve
    add-apt-repository ppa:fenics-packages/fenics
    apt-get -y update
    apt-get install --no-install-recommends fenics
    ldconfig

%runscript
    exec /bin/bash -i