Bootstrap: docker
From: ceciledc/fenics_mixed_dimensional:latest

%post
    apt-get -y update
    apt-get -y install software-properties-common ffmpeg curl build-essential python3 python3-pip python3-tk
    apt-get -y update
    apt-get -y install python3-lxml libcgal-dev libeigen3-dev
    python3 -m pip install numpy scipy matplotlib pandas ffmpeg-python openpyxl
    apt-get -y update 
    python3 -m pip install meshio pygmsh lxml pygalmesh
    apt-add-repository universe
    add-apt-repository ppa:ngsolve/ngsolve
    apt-get -y update
    apt-get -y install ngsolve
    ldconfig

%runscript
    exec /bin/bash -i