Bootstrap: docker
From: bhaveshshrimali/dolfin_superlu:latest

%environment
    export NOW=1
%post
    export GMSH_VERSION=4.5.6
    apt-get -y update
    apt-get -y install software-properties-common ffmpeg curl wget build-essential python3 python3-pip python3-tk
    apt-get -y update
    cd /usr/local
    apt-get -y install python3-lxml dvipng texlive-fonts-recommended texlive-latex-recommended texlive-latex-extra texlive-science cm-super 
    python3 -m pip install --force-reinstall numpy scipy matplotlib pandas ffmpeg-python openpyxl
    apt-get -y update 
    python3 -m pip install meshio pygmsh lxml pyamg
    apt-add-repository universe
    add-apt-repository ppa:ngsolve/ngsolve
    apt-get -y update
    apt-get -y install ngsolve
    ldconfig

%runscript
    exec /bin/bash -i